<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	xmlns:app="http://schemas.android.com/apk/res/be.vbsteven.quickcopy"
    
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
		
	<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Title"
			/>	 
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/et_title"
		/>
		
	<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Value"
			/>
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/et_value"
		android:minLines="3"
		android:autoText="true"
		/>
		
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Password"
			/>
	
		<CheckBox android:id="@+id/checkbox_password" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true" />
			
	</RelativeLayout>
	
	<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Group"
			/>
		 
	<Spinner android:id="@+id/spinner_category"
	  android:layout_height="wrap_content"
	  android:layout_width="fill_parent"
	  android:prompt="@string/groupspinner_prompt"
	  />
	  
		<Button android:id="@+id/but_create" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:text="Create" 
			android:visibility="gone"/>
		<Button android:id="@+id/but_save" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:text="Save" 
			android:visibility="gone"/>
</LinearLayout>
