<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is our main ActionBarSherlock theme -->
    <style name="Theme.Base" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style><!-- This is our ViewPagerIndicator theme. We inherit from the ABS theme -->


    <style name="Theme.Quickcopy" parent="Theme.Base">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
    </style>

    <!-- "Implementation" of our ABS custom theme -->
    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/TitleText</item>
        <item name="android:titleTextStyle">@style/TitleText</item>
    </style>



    <!-- "Implementation" of VPI theme. We just set the text size and color. -->
    <style name="CustomTitlePageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">#ccf4f2f1</item>
        <item name="footerColor">#cc333333</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="selectedColor">#555555</item>
        <item name="selectedBold">false</item>


    </style>

    <!-- More customizations for ABS -->
    <style name="TitleText" >
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">17dip</item>
    </style>
</resources>